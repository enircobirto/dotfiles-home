window:
  opacity: 0.8
  padding:
    x: 15
    'y': 15
  dimensions:
    columns: 120
    lines: 40
  decorations: full
scrolling:
  history: 100000
font:
  normal:
    family: Iosevka Curly
    style: Regular
  bold:
    family: Jetbrains Mono
    style: Bold
  italic:
    family: Iosevka
    style: Italic
  bold_italic:
    family: iosevka
    style: Bold Italic
  size: 8.5
selection:
  save_to_clipboard: true
shell:
  program: /usr/bin/fish
  args:
    - '-l'
    - '-c'
    - tmux attach || tmux
colors:
  primary:
    background: '0x000000'
    foreground: '0x666699'
  normal:
    black: '0x333366'
    red: '0x6666cc'
    green: '0x0099cc'
    yellow: '0x3366cc'
    blue: '0x006699'
    magenta: '0x0066ff'
    cyan: '0x669999'
    white: '0x99cccc'
  bright:
    black: '0x333399'
    red: '0x9999ff'
    green: '0x00ccff'
    yellow: '0x6699ff'
    blue: '0x0099cc'
    magenta: '0x0099ff'
    cyan: '0x66cccc'
    white: '0xccffff'
