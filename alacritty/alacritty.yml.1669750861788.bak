window:
  opacity: 0.8
  padding:
    x: 15
    'y': 15
  dimensions:
    columns: 120
    lines: 40
  decorations: full
scrolling:
  history: 100000
font:
  normal:
    family: Jetbrains Mono
    style: Regular
  bold:
    family: Jetbrains Mono
    style: Bold
  italic:
    family: Jetbrains Mono
    style: Italic
  bold_italic:
    family: Jetbrains Mono
    style: Bold Italic
  size: 8.5
selection:
  save_to_clipboard: true
shell:
  program: /usr/bin/fish
colors:
  # Default colors
  primary:
    background: '0x10000e'
    foreground: '0xcbf2f9'

  # Normal colors
  normal:
    black:   '0x0a191f'
    red:     '0xc32b14'
    green:   '0x119f11'
    yellow:  '0xbc7f15'
    blue:    '0x2747ec'
    magenta: '0x511bbf'
    cyan:    '0x079393'
    white:   '0xa355a3'

  # Bright colors
  bright:
    black:   '0x41617f'
    red:     '0xda412a'
    green:   '0x33b733'
    yellow:  '0xe09f2e'
    blue:    '0x526df7'
    magenta: '0x7d50d9'
    cyan:    '0x2bb0b0'
    white:   '0xafcaf7'
